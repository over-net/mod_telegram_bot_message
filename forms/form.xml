<?xml version="1.0" encoding="utf-8"?>
<form class="form-validate">
    <field name="name"
           type="text"
           label="MOD_TELEGRAM_BOT_MESSAGE_NAME_LABEL"
           required="true"
           size="40"
           class="inputbox"/>

    <field name="phone"
           type="tel"
           label="MOD_TELEGRAM_BOT_MESSAGE_ENTER_PHONE_LABEL"
           required="true"
           size="40"
           class="inputbox"
           pattern=""
           validate="tel"/>

    <field name="annotation"
           type="textarea"
           label="MOD_TELEGRAM_BOT_MESSAGE_ANNOTATION_LABEL"
           size="40"
           class="inputbox"
           pattern=""
    />

    <field name="additional"
           type="hidden"
           default=""/>

    <field name="module_id"
           type="hidden"
           default=""/>

    <field name="captcha"
           type="captcha"
           validate="captcha"
           required="true"
           label="MOD_TELEGRAM_BOT_MESSAGE_CAPTCHA_LABEL"
           description="">
    </field>


</form>